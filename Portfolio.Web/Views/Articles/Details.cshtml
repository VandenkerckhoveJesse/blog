@model Portfolio.Web.Models.Article

@{
    ViewData["Title"] = "Details";
}
    <div id="article">
        <img id="header_img" src="~/images/articles/@(Model.ID).png" alt="" />
        <main style="margin:0">
            <div id="info">
                <h1>@Model.Title</h1>
                <i>Jesse Vandenkerckhove, @Model.Date.ToString("dd/MM/yyyy")</i>
            </div>
            

            <div id="body">@Html.Raw(@Model.Body)</div>
        </main>
        
    </div>
    <style>
        #article {
            color: #363636;
            max-width: 950px;
            background-color: #F7F7F7;
            -webkit-box-shadow: 0px 0px 10px 1px rgba(100,100,100,1);
            -moz-box-shadow: 0px 0px 10px 1px rgba(150,150,150,1);
            box-shadow: 0px 0px 10px 1px rgba(150,150,150,1);
        }
            #article, #article img {
                margin-left: auto;
                margin-right: auto;
            }
            #header_img {
                width: 100%;
                height: 300px;
                object-fit: cover;
            }

            #article h1 {
                margin: 0
            }
        #article i {
            font-size: 1rem;
            font-weight: 100;
        }
        main {
            width: 100%;
            margin-left : 20px;
            margin-right: 20px;
            box-sizing: border-box;
        }
        #info {
            margin: 0;
            border-bottom: 1px solid black;
            width: 100%;
            margin-bottom: 20px;
        }
        #article h2{
            font-size: 1.7rem;
        }
        #article h3 {
            margin-left: 0;
            font-size: 1.4rem;
        }
    </style>






